<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/md_deep_purple_500"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- android:background="@drawable/Es"-->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:background="#83F4F4"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Smart Home"
        android:textSize="52sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/desc_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/teal_200"
                android:text="Hogar"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagen_estado"
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/casa" />

                <Button
                    android:id="@+id/btn_consultar_estado"
                    android:layout_gravity="center"
                    android:onClick="Consultar_Estado"
                    android:text="Consultar estado"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape"
                    android:shadowColor="#0726ED"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/desc_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/teal_200"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Analisis de temperatura"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagen_temp"
                    android:layout_width="104dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/temperatura" />

                <Button
                    android:id="@+id/btn_analizar_temperatura"
                    android:onClick="show_Analizar_Tmperatura"
                    android:text="Analizar"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape"
                    android:shadowColor="#0726ED"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_gravity="center"

        android:background="@color/fui_transparent"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/esquinas_redondeadas"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagen_salida"
                    android:layout_width="104dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    app:srcCompat="@drawable/salida" />

                <Button
                    android:id="@+id/btn_salir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape"
                    android:onClick="cerrarSesion"
                    android:shadowColor="#3E0D0D"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="salir"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>